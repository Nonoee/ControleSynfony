{% extends 'base.html.twig' %}

{% block title %}Création d'une annonce{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <div class="container">
        <h1>Créer un nouveau contact !</h1>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">Crée le contact</button>

        {{ form_end(form) }}

        <a href='{{path('contact_index')}}' class='btn btn-primary'>Annuler</a>
    </div>

{% endblock %}